{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ action.cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error.permission %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_permission }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% elseif error|length > 0 %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action.save }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-message">{{ entry_access_key }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_fixerio_forex_rates_access_key" value="{{ module_fixerio_forex_rates_access_key }}" placeholder="{{ placeholder_name }}" id="input-message" class="form-control" />
              {% if error.name  %}
              <div class="text-danger">{{ error_access_key }}</div>
              {% endif %}
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_fixerio_forex_rates_status" id="input-status" class="form-control">
                {% if module_fixerio_forex_rates_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
		  
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-freuqency">{{ entry_frequency }}</label>
            <div class="col-sm-10">
              <select name="module_fixerio_forex_rates_update_frequency" id="input-frequency" class="form-control">
			  
				{% for i in 1..24 %}
					{% if loop.index0 is even %}
							<option value="{{ i }}" 
							{% if module_fixerio_forex_rates_update_frequency == i %}
							selected="selected"
							{% endif %}
							>
								{{ i }} 
								{% if i == 1 %}
								{{ entry_hour }}
								{% else %}
								{{ entry_hours }}
								{% endif %}
							
							</option>
					{% endif %}
					
				{% endfor %}

              </select>
            </div>
          </div>
		  
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_last_update }}</label>
            <div class="col-sm-10 control-label float-left pull-left">
               {{ module_fixerio_forex_rates_last_update }}
            </div>
          </div>
		  
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}